<p style="color: green"><%= notice %></p>

<h1 class="h3 mb-4 text-gray-800">Usuários</h1>

<div class="row">
  <div class="col-lg-12">
    <div class="card shadow mb-4">
      <div class="card-body">
        <table class="table table-striped">
          <thead>
            <th>Nome</th>
            <th>E-mail</th>
            <th>CPF</th>
            <th>Ações</th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.document_number %></td>
                  <td>
                    <%= link_to "Detalhes", admin_user_path(user), class: 'btn btn-dark' %>
                    <%= link_to "Editar", edit_admin_user_path(user), class: 'btn btn-warning' %>
                    <%= link_to "Excluir", admin_user_path(user), method: :delete, class: 'btn btn-danger', data: { turbo_method: :delete, turbo_confirm: 'Deseja realmente excluir?' } %>
                  </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <%= link_to "Novo usuário", new_admin_user_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>