 
<%= simple_form_for([:admin, @product]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder: 'nome' %>
    <%= f.input :description, label: false, placeholder: 'descrição' %>
    <%= f.input :price, label: false, placeholder: 'preço' %>
    <%= f.input :quantity, label: false, placeholder: 'quantidade em estoque' %>
    <%= f.input :image, label: false, placeholder: 'imagem do produto' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Salvar', class: 'btn btn-info' %>
  </div>
<% end %> 