
<div id="<%= dom_id product %>">
  <p>
    <strong>Imagem:</strong>
    <%= image_tag product.image.variant(:details) %>
  </p>

  <p>
    <strong>Nome:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Descrição:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Preço:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Quantidade em Estoque:</strong>
    <%= product.quantity %>
  </p>

  <p>
    <strong>Ativo</strong>
    <%= product.active ? 'Sim' : 'Não' %>
  </p>
</div> 

<%= link_to "Voltar", admin_products_path, class: 'btn btn-primary' %>