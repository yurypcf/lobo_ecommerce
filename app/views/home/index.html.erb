<%
=begin%>
 <h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>
<% if user_signed_in? %>
  <h1>Bem-vindo</h1>
  <%= link_to "logout", destroy_user_session_path, method: :delete %>
<% else %>
  <h2>Por favor, se cadastre</h2>
  <%= link_to "Sign up", new_user_registration_path %>
<% end %> 
<%
=end%>

<!-- Header-->
<header class="bg-dark py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="text-center text-white">
            <h1 class="display-4 fw-bolder">Ecommerce PI4</h1>
            <p class="lead fw-normal text-white-50 mb-0">Slogan aqui</p>
        </div>
    </div>
</header>
<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
          <% @products.each do |product| %>
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                    <%= image_tag product.image.variant(:thumb), class: "card-img-top" if product.image %>
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder"><%= product.name %></h5>
                            <!-- Product price-->
                            R$<%= product.price %>
                        </div>
                    </div>
                    <!-- Product actions-->
                    <!-- <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">View options</a></div>
                    </div> -->
                </div>
            </div>
          <% end %>
        </div>
    </div>
</section>